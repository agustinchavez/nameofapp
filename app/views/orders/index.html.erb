<div class="container">
  <h1 class="headline">Orders:</h1>
  <div class="row">
    <div class="col-md-12">
      <input type="text" placeholder="Your nane" ng-model="name">
      <p>{{name}}</p>
    </div>
  </div>
  <div ng-controller="OrdersCtrl">
    <table class="table table-hover">
      <thead>
        <td>Order ID</td>
        <td>Total</td>
        <td>Product</td>
        <td></td>
      </thead>
      <tr>
        <form ng-submit="addOrder()">
          <td>
            <!-- <input type="number" value="{{orders[orders.length - 1].id + 1 }}" ng-model="newOrder.id" disabled> -->
            <span ng-show="newOrder">{{orders[orders.length - 1].id + 1 }}</span>
          </td>
          <td>
            <input type="number" step="0.01" class="form-control" ng-model="newOrder.total">
          </td>
          <td>
            <!-- <input type="number" class="form-control" ng-model="newOrder.product_id"> -->
            <select ng-model="newOrder.product_id" class="form-controll">
              <option ng-repeat="product in products" value="{{product.id}}">{{product.name}}</option>
            </select>
          </td>
          <td>
            <input type="submit" value="+" class="btn btn-success">
          </td>
        </form>
      </tr>
      <tr ng-repeat="order in orders | orderBy: '-id' :reverse">
        <td>
          {{order.id}}
        </td>
        <td>
          <strong>{{order.total | currency}}</strong>
        </td>
        <td>
          {{order.product.name}}
          <small ng-show="order.id"><br>-{{order.user.email}}</small>
        </td>
        <td>
          <button ng-click="deleteOrder(order)" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
        </td>
      </tr>
    </table>
  </div>
</div>
<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Colour</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% cache(@products) do %>
    <%= render partial: "shared/product", collection: @products %>
    <% end %>

  </tbody>
</table>

<br>

<button type="submit" class="btn btn-default"><%= link_to 'New Product', new_product_path %></button>

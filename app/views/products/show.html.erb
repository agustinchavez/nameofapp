<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-4">
    <p>
      <strong>Name:</strong>
      <%= @product.name %>
    </p>
  </div>

  <div class="col-md-4">
    <p>
      <strong>Description:</strong>
      <%= @product.description %>
    </p>
  </div>

  <div class="col-md-4">
    <p>
      <strong>Colour:</strong>
      <%= @product.colour %>
    </p>
  </div>
  <div class="col-md-4">
    <p>
      <strong>Price:</strong>
      $<%= @product.price %>
    </p>
  </div>

  <div class="col-md-4">
    <p>
      <strong>Image:</strong>
    </p>
    <a href="<%= @product.image_url %>" class="thumbnail" alt="Responsive image">
      <img src="<%= @product.image_url %>" alt="...">
    </a>
  </div>

  <!--   stripe payment form-->
  <div class="col-md-4">
   <%= form_tag "/payments/create" do %>
      <%= hidden_field_tag "product_id", @product.id %>
      <%= render partial: "shared/stripe_checkout_button" %>
    <% end %>
  </div>

  <div class="col-md-4">
    <p class="avg-rating">Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
  </div>

  <div class="col-md-4">
    <%= render 'shared/new_comment' %>
  </div>


  <div class="col-md-4">
    <button type="submit" class="btn btn-default"><%= link_to 'Edit', edit_product_path(@product) %></button>|
    <button type="submit" class="btn btn-default"><%= link_to 'Back', products_path %></button>
  </div>


</div>


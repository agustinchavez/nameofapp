<div class="row">
  <hr>
  <% if comment.user == nil %>
    <p>Deleted User <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
  <% else %>
    <p><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
  <% end %>

  <% if signed_in? && current_user.admin? %>
    <%= link_to ('<span class="glyphicon glyphicon-remove pull-right"></span>').html_safe, product_comment_path(@product, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
  <div class="rated" data-score="<%= comment.rating %>"></div>
  <p><%= comment.body %></p>

</div>
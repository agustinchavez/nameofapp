<!DOCTYPE html>
<html>
<head>
  <title>Nameofapp</title>

  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="nav">
      <ul class="noList">

        <li>
          <%= link_to 'Home', root_path %>
        </li>

        <li>
          <%= link_to 'About', static_pages_about_path %>
        </li>

        <li>
          <%= link_to 'Contact', static_pages_contact_path %>
        </li>

        <li>
          <%= link_to 'Products', products_path %>
        </li>

        <li>
          <%= link_to 'New Product', new_product_path %>
        </li>

        <li>
          <form class="navbar-form navbar-left" role="search" <%= form_tag("/products", method: "get") do %>
            <div class="form-group">
              <%= label_tag(:q, "Search for:") %>
            </div>
            <%= text_field_tag(:q) %>
            <button type="submit" class="btn btn-default"><%= submit_tag("Search") %></button>
          <% end %>
        </li>
    </ul>
    <ul class="nav pull-right">
      <li>
        <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path)%>
            <% else %>
          <%= link_to('Login', new_user_session_path) %>
        <% end %>
      </li>
    </ul>
  </div>

   <div class="messages">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>

  <h1>Welcome to Bikes Chicago</h1>
  <h2>Your source for used Bikes in Chicago!</h2>
  <%= image_tag("bicyclistsmovement.jpg", class: "style_image") %>
  <%= yield %>



</body>
</html>
